<div class="container mt-5">
  <h1>Task Details</h1>

  <div class="card">
    <div class="card-body">
      <p class="card-text"><strong>Title:</strong> <%= @task.title %></p>
      <p class="card-text"><strong>Details:</strong> <%= @task.details %></p>
      <p class="card-text"><strong>Completed:</strong> <input type="checkbox" <%= @task.completed ? 'checked' : '' %> disabled></p>

      <%= link_to 'Edit task', edit_task_path(@task), class: "btn btn-primary" %>
      <%= link_to 'Back to tasks', tasks_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
